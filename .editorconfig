# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*.sh,Makefile]
indent_style = tab

[*.{js,jsx,ts,tsx,css,scss,html,md,yml,yaml,json,mdx,graphql,mdx}]
indent_style = space
indent_size = 2

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

